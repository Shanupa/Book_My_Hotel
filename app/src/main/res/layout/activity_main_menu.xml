<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/mainmenu"
    tools:context="com.sourcey.materiallogindemo.MainMenuActivity"
    android:id="@+id/mainmenu">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_Imgbutton"
        android:src="@drawable/fb_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:color="#66FF0000"
        android:alpha="0.60"
        android:id="@+id/start_button"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:color="#66FF0000"
        android:alpha="0.60"
        android:id="@+id/about_button"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_below="@+id/web_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visit Out Website"
        android:color="#66FF0000"
        android:alpha="0.60"
        android:id="@+id/web_button"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_below="@+id/google_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps"
        android:color="#66FF0000"
        android:alpha="0.60"
        android:id="@+id/google_button"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_below="@+id/start_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
